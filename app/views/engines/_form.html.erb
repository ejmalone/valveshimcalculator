<%= form_with(model: engine, data: { controller: "engine", action: "engine#validate" }) do |form| %>
  <% if engine.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(engine.errors.count, "error") %> prohibited this engine from being saved:</h2>

      <ul>
        <% engine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_errors_element(:engine) %>

  <% unless engine.persisted? %>
    <div>
      <%= form.label :num_cylinders, style: "display: block" %>
      <%= form.select :num_cylinders, Engine::CYLINDER_OPTS %>
    </div>

    <div>
      <%= form.label :valves_per_cylinder, style: "display: block" %>
      <%= form.select :valves_per_cylinder, Engine::VALVES_PER_CYLINDER_OPTS %>
    </div>
  <% else %>
    <div>
      Note: delete this engine if you need to change the cylinders or valves per cylinder
    </div>

    <div>
      Cylinders: <%= engine.cylinders %>
    </div>

    <div>
      Valves per cylinder: <%= engine.valves_per_cylinder %>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, data: { engine_target: "name" } %>
  </div>

  <div>
    Intake clearance MM (<%= form.label :intake_min, style: "display: inline" %>
    to <%= form.label :intake_max, style: "display: inline" %>)

    <%= form.number_field :intake_min, step: :any, data: { engine_target: "minintake" } %> -
    <%= form.number_field :intake_max, step: :any, data: { engine_target: "maxintake" } %>
  </div>

  <div>
    Exhaust clearance MM (<%= form.label :exhaust_min, style: "display: inline" %>
    to <%= form.label :exhaust_max, style: "display: inline" %>)

    <%= form.number_field :exhaust_min, step: :any, data: { engine_target: "minexhaust" } %> -
    <%= form.number_field :exhaust_max, step: :any, data: { engine_target: "maxexhaust" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
