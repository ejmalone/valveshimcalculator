<% sb_link_class = "list-group-item list-group-item-action list-group-item-light p-3" %>

<div class="border-end bg-white" id="sidebar-wrapper">
  <div class="sidebar-heading border-bottom bg-light">
    <%= link_to "Valve Adjustments", root_url %>
  </div>
  <div class="list-group list-group-flush">
    <% if current_user&.engines&.present? %>
      <%= link_to "My engines", engines_path, class: sb_link_class %>
    <% elsif anonymous_user&.engines&.present? %>
      <strong><%= link_to "Save progress", view_token_path, class: sb_link_class %></strong>
    <% end %>
    <%= link_to "Spreadsheet Template", spreadsheet_path, class: sb_link_class %>
    <%= link_to "About", about_path, class: sb_link_class %>
    <%= link_to "Legal", legal_path, class: sb_link_class %>
    <%= link_to "Contact", "#", class: sb_link_class, data: { bs_toggle: :modal, bs_target: "#wufoo_contact"} %>
  </div>
</div>

<div id="wufoo_contact" style="display: none;" class="modal" tabindex="-1" data-iframe-src="https://ericmalone.wufoo.com/embed/m7wlw3l1gv5h5v/">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <iframe height="437" title="Embedded Wufoo Form" allowtransparency="true" frameborder="0" scrolling="no" style="width:100%;border:none" src=""> <a href="https://ericmalone.wufoo.com/forms/m7wlw3l1gv5h5v/">Fill out my Wufoo form!</a> </iframe>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>